@model PresentationApp.Models.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create a new product</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Product.Name" class="control-label"></label>
                <input asp-for="Product.Name" class="form-control" />
                <span asp-validation-for="Product.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.Description" class="control-label"></label>
                <input asp-for="Product.Description" class="form-control" />
                <span asp-validation-for="Product.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.Price" class="control-label"></label>
                <input asp-for="Product.Price" class="form-control" />
                <span asp-validation-for="Product.Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.ImageURL" class="control-label"></label>
                <input type="file" class="form-control" asp-for="File" />
                <span asp-validation-for="Product.ImageURL" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Enter Image URL</label>
                <input asp-for="Product.ImageURL" class="form-control" />
                <span asp-validation-for="Product.ImageURL" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Select File to Upload</label>
                <input asp-for="Product.Stock" class="form-control" />
                <span asp-validation-for="Product.Stock" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Category</label>

                <select class="form-control" asp-for="Product.Category.Id">
                    @foreach (var c in Model.Categories) //this is not being popilated in createmodel
                    {
                        <option value="@c.Id">@c.Name</option>
                    }
                </select>

            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-dark" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

